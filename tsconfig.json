{
  "extends": ["@vue/tsconfig"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noImplicitAny": false, // Many components haven't been converted to TS yet
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["unplugin-icons/types/vue"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./pages/*"],
      "@components/*": ["./components/*"],
      "@data/*": ["./data/*"],
      "@root/*": ["./*"],
      "@vitepress/*": ["./.vitepress/*"]
    }
  },
  "include": [
    "components/**/*.vue",
    ".vitepress/**/*.ts",
    ".vitepress/**/*.vue"
  ],
  "exclude": [".vitepress/cache", ".vitepress/dist"],
  "vueCompilerOptions": {
    "vitePressExtensions": [".md"]
  }
}
