{
  "extends": ["@vue/tsconfig"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowArbitraryExtensions": true, // for allowing .d.json.ts declarations
    "resolveJsonModule": false, // force use of our types and not inferred ones
    "noImplicitAny": false, // Many components haven't been converted to TS yet
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["unplugin-icons/types/vue"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./pages/*"],
      "@src/*": ["./src/*"],
      "@data/*": ["./data/*"],
      "@vitepress/*": ["./.vitepress/*"]
    }
  },
  "include": [
    "*.mts",
    "*.ts",
    "pages/**/*.mts",
    "pages/**/*.ts",
    "scripts/**/*.mts",
    "scripts/**/*.ts",
    "src/**/*.mts",
    "src/**/*.ts",
    "src/**/*.vue",
    ".vitepress/**/*.mts",
    ".vitepress/**/*.ts",
    ".vitepress/**/*.vue"
  ],
  "exclude": [".vitepress/cache", ".vitepress/dist"],
  "vueCompilerOptions": {
    "vitePressExtensions": [".md"]
  }
}
